{
  "extends": [
    "config:base"
  ],
  "dependencyDashboard": true,
  "packageRules": [
    {
      "groupName": "Android Gradle Plugin and Lint",
      "matchPackagePatterns": [
        "com\\.android\\.application",
        "com\\.android\\.library",
        "com\\.android\\.tools\\.lint"
      ]
    },
    {
      "groupName": "Kotlin",
      "matchPackagePatterns": [
        "^org\\.jetbrains\\.kotlin"
      ]
    },
    {
      "groupName": "androidx.test",
      "matchPackagePatterns": [
        "^androidx\\.test"
      ]
    }
  ]
}
